{
    "compilerOptions": {
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "target": "es2020",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
